<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LC2" >

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background"
        tools:context=".LC" >

        <ImageView
            android:id="@+id/ImageView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/TextView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ImageView05"
            android:background="#B84A00"
            android:gravity="center"
            android:text="Liver Check"
            android:textColor="#FFFFFF"
            android:textSize="22dp" />

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ImageView05"
            android:layout_below="@+id/TextView15"
            android:layout_marginLeft="69dp"
            android:background="#ffffff"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/radioButton1"
            android:layout_alignBottom="@+id/radioButton1"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/radioButton1"
            android:background="#ffffff"
            android:text="No" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/radioButton1"
            android:background="#ffffff"
            android:text="Q15 Are you overweight?"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/RadioButton02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/radioButton1"
            android:layout_below="@+id/TextView01"
            android:background="#ffffff"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/RadioButton01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/RadioButton02"
            android:layout_alignBottom="@+id/RadioButton02"
            android:layout_alignLeft="@+id/radioButton2"
            android:background="#ffffff"
            android:text="No" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/RadioButton02"
            android:background="#ffffff"
            android:text="Q16 Do you frequently suffer from nausea or vomiting (typically in the morning)?"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/RadioButton04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/RadioButton02"
            android:layout_below="@+id/TextView02"
            android:background="#ffffff"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/RadioButton03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/RadioButton04"
            android:layout_alignBottom="@+id/RadioButton04"
            android:layout_alignLeft="@+id/RadioButton01"
            android:background="#ffffff"
            android:text="No" />

        <RadioButton
            android:id="@+id/RadioButton05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/RadioButton03"
            android:layout_below="@+id/RadioButton04"
            android:background="#ffffff"
            android:text="No" />

        <RadioButton
            android:id="@+id/RadioButton07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/RadioButton05"
            android:layout_below="@+id/RadioButton04"
            android:background="#ffffff"
            android:text="No" />

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/RadioButton04"
            android:background="#ffffff"
            android:text="Q17 Do you experience weak or stiff muscle ligaments or tendons?"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/RadioButton10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView05"
            android:layout_toLeftOf="@+id/radioButton2"
            android:background="#ffffff"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/RadioButton09"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/RadioButton10"
            android:layout_alignBottom="@+id/RadioButton10"
            android:layout_alignLeft="@+id/RadioButton07"
            android:background="#ffffff"
            android:text="No" />

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/RadioButton10"
            android:background="#ffffff"
            android:text="Q18 Do you have bad breath and/or a coated tounge or body odor or all three?"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/RadioButton12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView06"
            android:layout_toLeftOf="@+id/radioButton2"
            android:background="#ffffff"
            android:text="Yes" />

        <RadioButton
            android:id="@+id/RadioButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/RadioButton12"
            android:layout_alignBottom="@+id/RadioButton12"
            android:layout_alignLeft="@+id/RadioButton09"
            android:background="#ffffff"
            android:text="No" />

        <TextView
            android:id="@+id/TextView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TextView14"
            android:background="#ffffff"
            android:text="Q14 Do you suffer from depression or moodiness not related to any known causes or life events?"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#ffffff"
            android:text="Thanks for your response to the stress check questionnaire, this will help your GP determine whether to bring you in for further examination."
            android:textStyle="italic" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TextView03"
            android:layout_alignParentRight="true"
            android:background="#B84A00"
            android:text="Submit"
            android:textColor="#FFFFFF" />

    </RelativeLayout>

</RelativeLayout>