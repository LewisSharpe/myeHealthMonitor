<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Weight" >

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="44dp"
        android:background="#ffffff"
        android:text="Date and Time of Glucose Measurement:"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView2"
        android:background="#B84A00"
        android:gravity="center"
        android:text="Weight"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/editText1"
        android:layout_below="@+id/TextView02"
        android:layout_marginRight="41dp"
        android:layout_marginTop="22dp"
        android:background="#ffffff"
        android:text="Time"
        android:textSize="18sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/textView3"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/EditText03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditText02"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/EditText02"
        android:layout_marginTop="15dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/EditText04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/EditText03"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/textView3"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="26dp" />

    <EditText
        android:id="@+id/EditText05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/EditText04"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="26dp" />

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="45dp"
        android:layout_toRightOf="@+id/TextView03"
        android:background="#B84A00"
        android:onClick="onClickCalculateO2"
        android:text="Save"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_toRightOf="@+id/TextView04"
        android:background="#ffffff"
        android:text="Date"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:text="Weight (kg)"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/textView3"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EditText01"
        android:layout_alignBottom="@+id/EditText01"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:text="Fat (%)"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextView05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EditText02"
        android:layout_alignBottom="@+id/EditText02"
        android:layout_alignParentLeft="true"
        android:background="#ffffff"
        android:text="Abdomen (cm)"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/EditText02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Button01"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/EditText01"
        android:layout_marginTop="11dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textSize="26dp" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/EditText03"
        android:background="#ffffff"
        android:text="Waist (cm):"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextView08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/EditText04"
        android:background="#ffffff"
        android:text="Note:"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/EditText04"
        android:background="#ffffff"
        android:text="Hip (cm):"
        android:textStyle="italic" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/Button01"
        android:background="#B84A00"
        android:onClick="onClickCalculateO2"
        android:text="Clear"
        android:textSize="26dp" />

</RelativeLayout>