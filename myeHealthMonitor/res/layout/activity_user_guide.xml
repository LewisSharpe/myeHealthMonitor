<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".UserGuide" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="15dp"
        android:background="#FF0000"
        android:gravity="center"
        android:text="User Guide"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:text="Physical Health Section contains the following functionality: calculating oxygen saturation, recording respiratory rate, liver check survey, measuring blood pressure using Android camera, entering glucose and weight values."
        android:textColor="#B84A00"
        android:textSize="14dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="28dp"
        android:background="#ffffff"
        android:text="Mental Health Section contains the following functionality: Mood Check, Stress Check and General Mental Health Questions."
        android:textColor="#005daa"
        android:textSize="14dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="31dp"
        android:background="#ffffff"
        android:text="The General Health Advice section offers advice on the following sections: Self Cure, Seasonal Problems, Granny Tips and First Aid."
        android:textColor="#006600"
        android:textSize="14dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView03"
        android:layout_marginTop="35dp"
        android:background="#ffffff"
        android:contentDescription="14dp"
        android:text="Register/Log In: Log in with your user details. "
        android:textColor="#660033"
        android:textStyle="italic" />

</RelativeLayout>