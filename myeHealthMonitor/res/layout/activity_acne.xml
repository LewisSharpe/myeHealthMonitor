<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Acne" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView2"
        android:background="#FF0000"
        android:gravity="center"
        android:text="Acne"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="21dp"
        android:background="#ffffff"
        android:text="Acne is a skin problem which affects most of the teenagers. This condition is a result of hormones of the oil glands on the skin which are called sebaceous glands. These glands secrete an oily substance known as sebum on the pores of the skin surface. This oil gets mixed with the bacteria living on the skin and along with dirt the skin pores get clogged thus pimples are formed."
        android:textSize="10dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="22dp"
        android:background="#ffffff"
        android:text="(Source: www.rayur.com)"
        android:textSize="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="16dp"
        android:background="#ffffff"
        android:text="Preventation: Certain things must be avoided like never pick or squeeze the blemishes. Never rub the skin harshly causing friction in the acne affected area. Popping pimples will send the acne bacteria deeper in the skin.  Avoid fatty foods, chocolates and dirty skin. Washing gently twice a day is sufficient. Acne can appear as black heads, white heads, papules and pustules."
        android:textSize="10dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="22dp"
        android:background="#ffffff"
        android:text="Treatment: In severe cases of acne a Dermatologist, who is a skin specialist can treat this problem. When products like creams, lotions, soaps are used regularly to treat acne, the results will be seen after 4 â€“ 8 weeks of using them. In severe cases antibiotics are prescribed to be taken for a period of some months."
        android:textSize="10dp"
        android:textStyle="italic" />

</RelativeLayout>