<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Sinusitis" >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageView2"
        android:background="#FF0000"
        android:gravity="center"
        android:text="Sinusitis"
        android:textColor="#FFFFFF"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="13dp"
        android:background="#ffffff"
        android:text="Common symptoms of chronic sinusitis include:  a blocked nose, a runny nose, a sinus headache, facial pain, a reduced sense of smell, bad breath (halitosis)."
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="23dp"
        android:background="#ffffff"
        android:text="See your GP if your symptoms don&apos;t improve after seven days, if they&apos;re getting worse, or if your sinusitis keeps coming back. If you have severe or chronic (persistent) sinusitis, your treatment options will include: antibiotics, steroid sprays or drops and also surgery (if all other treatments have failed)"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="25dp"
        android:background="#ffffff"
        android:text="Your GP may refer you to an ear, nose and throat (ENT) specialist, who will carry out some tests to find the underlying cause of your sinusitis. Chronic sinusitis may last for several months."
        android:textStyle="italic" />

    <TextView
        android:id="@+id/TextView08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView02"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:text="(Source: NHS UK)"
        android:textSize="10dp"
        android:textStyle="bold" />

</RelativeLayout>